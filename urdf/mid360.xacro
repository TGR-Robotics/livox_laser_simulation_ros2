<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="M_PI" value="3.1415926"/> 
  <xacro:property name="laser_min_range" value="0.1"/>
  <!-- 提高最大范围以获得更广的探测范围 -->
  <xacro:property name="laser_max_range" value="80.0"/>
  <!-- 提高采样点数以获得更密集的点云 -->
  <xacro:property name="samples" value="20000"/>
  <!-- 提高分辨率以获得更好的点云质量 -->
  <xacro:property name="resolution" value="0.003"/>
  <xacro:property name="noise_mean" value="0.0"/>
  <!-- 适度降低噪声模拟以提高性能 -->
  <xacro:property name="noise_stddev" value="0.005"/>

  <xacro:property name="mass" value="0.4" />
  <xacro:property name="length" value="0.1" />
  <xacro:property name="width" value="0.06" />
  <xacro:property name="height" value="0.06" />

  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>



  <xacro:macro name="mid360" params="name:='' parent:= 'base_link' topic:='mid360' *origin ">

    <link name="${name}">
      <xacro:box_inertia m="${mass}" w="${width}" d="${length}" h="${height}"/>
      <visual>
        <geometry>
          <mesh filename="package://venice_robot_description/meshes/mid-360-asm.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="${length} ${width} ${height}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${name}_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <gazebo reference="${name}">
      <sensor type="ray" name="${name}">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <!-- 提高更新频率以获得更流畅的点云数据 -->
        <update_rate>10</update_rate>
        <!-- This ray plgin is only for visualization. -->
        <plugin name="${name}_plugin" filename="libros2_livox.so">
			<ray>
			  <scan>
				<horizontal>
				<!-- 提高水平采样点以获得更密集的水平扫描 -->
				<samples>80</samples>
				<resolution>1</resolution>
				<min_angle>${0}</min_angle>
				<max_angle>${2*M_PI}</max_angle>
				</horizontal>
				<vertical>
				<!-- 提高垂直采样点以获得更密集的垂直扫描 -->
				<samples>15</samples>
				<resolution>1</resolution>
				<min_angle>${-7.22/180*M_PI}</min_angle>
				<max_angle>${55.22/180*M_PI}</max_angle>
				</vertical>
			  </scan>
			  <range>
				<min>${laser_min_range}</min>
				<max>${laser_max_range}</max>
				<resolution>${resolution}</resolution>
			  </range>
			  <noise>
				<type>gaussian</type>
				<mean>${noise_mean}</mean>
				<stddev>${noise_stddev}</stddev>
			  </noise>
			</ray>
          <visualize>true</visualize>  <!-- 启用可视化以确保数据正常发布 -->
		  <samples>${samples}</samples>
		  <downsample>10</downsample>  <!-- 适度下采样以平衡性能和质量 -->
		  <csv_file_name>$(find ros2_livox_simulation)/scan_mode/mid360.csv</csv_file_name>
		  <topic>${topic}</topic>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>

</robot>